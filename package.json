{
  "name": "fedpack",
  "version": "1.7.0",
  "description": "just some webpack settings",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=development webpack serve --config webpack.dev.js",
    "build": "NODE_ENV=production webpack --config webpack.prod.js",
    "serve": "serve --no-clipboard --listen 8080 ./public",
    "lint-js": "eslint './src/js/**/*.js'",
    "lint-css": "stylelint './src/css/**/*.css'",
    "fix-css": "yarn lint-css --fix",
    "fix-js": "yarn lint-js --fix",
    "prettify": "yarn prettier --write",
    "prettier": "prettier './**/*.{js,jsx,json,yml,yaml,css,less,scss,ts,tsx,md,mdx,graphql,vue}'",
    "format": "yarn prettify && yarn fix-js && yarn fix-css",
    "test": "is-ci \"test:coverage\" \"test:watch\"",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "is-ci \"test:e2e:run\" \"test:e2e:open\"",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "pretest:e2e:run": "yarn build",
    "test:e2e:run": "start-server-and-test serve http://localhost:8080 cy:run",
    "test:e2e:open": "start-server-and-test start http://localhost:8080 cy:open",
    "validate": "yarn test:coverage && yarn test:e2e:run",
    "analyze": "yarn build --profile --json=stats.json && webpack-bundle-analyzer stats.json public/"
  },
  "jest-runner-eslint": {
    "cliOptions": {
      "ignorePath": "./.gitignore"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.13.12",
    "@testing-library/dom": "^7.30.0",
    "@viget/tailwindcss-plugins": "^0.0.11",
    "autoprefixer": "^10.2.5",
    "axe-core": "^4.1.3",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "core-js": "^3.9.1",
    "css-loader": "^5.1.3",
    "cssnano": "^4.1.10",
    "cypress": "^6.8.0",
    "cypress-axe": "^0.12.2",
    "eslint": "^7.22.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-jest": "^24.3.2",
    "favicons": "^6.2.1",
    "favicons-webpack-plugin": "5.0.2",
    "html-loader": "^2.1.2",
    "html-webpack-harddisk-plugin": "^2.0.0",
    "html-webpack-plugin": "^5.3.1",
    "husky": "4",
    "is-ci-cli": "^2.2.0",
    "jest": "^26.6.3",
    "jest-runner-eslint": "^0.10.0",
    "jest-runner-stylelint": "^2.3.7",
    "lint-staged": ">=10.5.4",
    "mini-css-extract-plugin": "^1.3.9",
    "parse5": "^6.0.1",
    "postcss": "8.2.8",
    "postcss-color-hex-alpha": "^7.0.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-loader": "^5.2.0",
    "postcss-nesting": "^7.0.1",
    "prettier": "^2.2.1",
    "serve": "^11.3.2",
    "start-server-and-test": "^1.12.1",
    "style-loader": "^2.0.0",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-order": "^4.1.0",
    "tailwindcss": "1.9.6",
    "twig-html-loader": "^0.1.9",
    "webpack": "^5.27.2",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-manifest-plugin": "^3.1.0",
    "webpack-merge": "^5.7.3"
  },
  "dependencies": {
    "what-input": "^5.2.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.css": "stylelint --fix",
    "*.{js,jsx,json,yml,yaml,css,less,scss,ts,tsx,md,mdx,graphql,vue}": "prettier --write"
  }
}
